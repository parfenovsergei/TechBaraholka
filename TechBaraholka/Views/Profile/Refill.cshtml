
@{
    ViewData["Title"] = "Пополнение счёта";
}

<div class="d-flex justify-content-center align-items-center mb-3"><h1>Пополнение счёта</h1></div>
<div class="container d-flex justify-content-center align-items-center">
    <form asp-action="Refill" asp-controller="Profile"  method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <label class="col-3 col-form-label">Введите сумму:</label>
            <div class="col-9">
                <input type="number" class="form-control" name="balance">
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-center mb-2">
            <button type="submit" class="btn btn-warning btn-outline-dark">Пополнить счёт</button>
        </div>
    </form>
</div>
