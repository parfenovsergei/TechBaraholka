@model TechBaraholka.Domain.Entity.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4">
            @if (!(Model.AvatarPath == ViewBag.Path))
            {
                <p><img src="@Url.Content(Model.AvatarPath)" width="400" class="img-thumbnail img-fluid" alt=""></p>
            }
            else
            {
                <p><img src="~/AvatarPics/DefaultAvatar.jpg" width="400" class="img-thumbnail img-fluid" alt=""></p>
            }
        </div>
        <div class="col-lg-8">
            <div>
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-2">
                    <h4>@Model.Name @Model.Surname</h4>
                    <span class="fs-5">Баланс: $102</span>
                </div>
                <p class="mb-2">Email: @Model.Email</p>
                <p class="mb-2 border-bottom pb-3">Адрес: @Model.Address</p>
                <a class="btn btn-warning btn-outline-dark" href="#">Изменить</a>
                <a class="btn btn-warning btn-outline-dark" href="#">Пополнить баланс</a>
            </div>
        </div>
    </div>
</div>